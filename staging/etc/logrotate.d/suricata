/var/log/suricata/eve.json {
	daily
	rotate 30
        olddir /var/log/suricata/StatsByDate/
	compress
	missingok
	notifempty
	dateext
	postrotate
	    /bin/kill -HUP $(cat /var/run/suricata.pid)
	endscript
}

# to see status
# cat /var/lib/logrotate/status
# to manually test - 
# logrotate --force /etc/logrotate.d/suricata
